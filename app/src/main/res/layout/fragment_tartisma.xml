<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_template"
    tools:context=".Tartisma">

    <ListView
        android:id="@+id/yorumlar_listesi"
        android:layout_width="375dp"
        android:layout_height="610dp"
        android:translationY="20dp"
        android:divider="#FFFFFF"
        android:dividerHeight="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/yorum_ekleme_butonu"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="yorum ekle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_item_dark"
        app:layout_constraintTop_toBottomOf="@+id/yorumlar_listesi" />

    <Button
        android:id="@+id/hesaptan_cikis_butonu"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="çıkış yap"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="20dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_item_dark"
        app:layout_constraintTop_toBottomOf="@+id/yorumlar_listesi" />

    <Button
        android:id="@+id/hesap_oluştur"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="hesap oluştur"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_item_dark"
        app:layout_constraintTop_toBottomOf="@+id/yorumlar_listesi" />

    <Button
        android:id="@+id/giriş_yap"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginRight="20dp"
        android:text="giriş yap"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_item_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yorumlar_listesi" />

    <TextView
        android:id="@+id/yukleniyor_tartisma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yükleniyor..."
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>