<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AnasayfaFragment">

    <Button
        android:id="@+id/hava_durumu"
        android:layout_width="160dp"
        android:layout_height="275dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="35dp"
        android:backgroundTint="#114018"
        android:fontFamily="@font/akaya_kanadaka"
        android:gravity="center"
        android:padding="16dp"
        android:text="Hava Durumu"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/toplu_ulasim"
        android:layout_width="160dp"
        android:layout_height="275dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="#114018"
        android:elevation="4dp"
        android:fontFamily="@font/akaya_kanadaka"
        android:gravity="center"
        android:padding="16dp"
        android:text="Toplu Ulaşım"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/muhtarlik"
        android:layout_width="336dp"
        android:layout_height="111dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="#228331"
        android:elevation="4dp"
        android:fontFamily="@font/akaya_kanadaka"
        android:gravity="center"
        android:padding="16dp"
        android:text="Muhtarlık"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toplu_ulasim" />

    <Button
        android:id="@+id/taksi"
        android:layout_width="336dp"
        android:layout_height="111dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="#228331"
        android:elevation="4dp"
        android:fontFamily="@font/akaya_kanadaka"
        android:gravity="center"
        android:padding="16dp"
        android:text="Taksi"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/muhtarlik" />

    <Button
        android:id="@+id/satılık"
        android:layout_width="148dp"
        android:layout_height="107dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="#48D35D"
        android:elevation="4dp"
        android:fontFamily="@font/akaya_kanadaka"
        android:gravity="center"
        android:padding="16dp"
        android:text="Satılık"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taksi" />

    <Button
        android:id="@+id/kiralık"
        android:layout_width="148dp"
        android:layout_height="107dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#48D35D"
        android:elevation="4dp"
        android:fontFamily="@font/akaya_kanadaka"
        android:gravity="center"
        android:padding="16dp"
        android:text="Kiralık"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taksi" />

</androidx.constraintlayout.widget.ConstraintLayout>
